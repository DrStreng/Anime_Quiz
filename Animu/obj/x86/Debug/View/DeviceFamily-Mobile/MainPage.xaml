<Page x:ConnectionId='15' x:Name="Tlo"
    x:Class="Animu.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Animu"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='16' x:Name="VisualState500">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="1000" />
                        <AdaptiveTrigger MinWindowWidth="1000" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TranslateX.TranslateX"
                                Value="0" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='17' x:Name="VisualState0">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0" />
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TranslateX.TranslateX"
                                Value="-150" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.Background>
            <ImageBrush 
                AlignmentY="Center" 
                Stretch="None" 
                ImageSource="../../Assets/pixel_art_pattern_gray-wallpaper-2560x1600.jpg"
                >
                <ImageBrush.Transform>
                    <CompositeTransform x:ConnectionId='18' x:Name="TranslateX" />
                </ImageBrush.Transform>

            </ImageBrush>
        </Grid.Background>

        <SplitView x:ConnectionId='19' Canvas.ZIndex="1" x:Name="Burgerek" PanePlacement="Right" DisplayMode="CompactOverlay" IsPaneOpen="False" CompactPaneLength="50" OpenPaneLength="50" Margin="0,0,0,0">
            <SplitView.Pane>
                <StackPanel  Background="Beige" HorizontalAlignment="Right" Margin="0,0,0,0" Width="50" RenderTransformOrigin="1.146,0.497">
                    <Button x:ConnectionId='25' x:Name="show" FontFamily="Segoe MDL2 Assets" Content="&#xE00F;" Width="50" Height="50" Background="Transparent"                    />
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='28' x:Name="Glowna" FontFamily="Segoe MDL2 Assets" Width="50" Content="&#xE007;" Height="50" Background="Transparent"                 />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='27' x:Name="Ranking" FontFamily="Segoe MDL2 Assets" Width="50" Content="&#xE00A;" Height="50" Background="Transparent"                  />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='26' x:Name="live_titles" FontFamily="Segoe MDL2 Assets" Width="50" Content="&#xE104;" Height="50" Background="Transparent"                           />
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>


        <Grid VerticalAlignment="Center"
              Background="White"
              CornerRadius="8"
              Margin="10,275,70,153"
              Padding="15 50">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Button x:ConnectionId='20' x:Name="Play"
                    Grid.Row="0"
                    Content="Start"
                    Margin="8"
                    Background="#FF1F7CB2"
                    Foreground="White"
                    HorizontalAlignment="Stretch"                   />

            <Grid Grid.Row="1" Margin="20 0 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:ConnectionId='23' 
                    GroupName="Dificulty"
                    Grid.Column="0"
                    Content="Easy"
                    x:Name="xŁatwy"/>
                <RadioButton x:ConnectionId='24' 
                    GroupName="Dificulty"
                    Grid.Column="1"
                    Content="Medium"
                    x:Name="xTrudny"/>
            </Grid>

            <Grid Grid.Row="2" Margin="20 0 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <RadioButton x:ConnectionId='21' 
                    GroupName="Dificulty"
                    Grid.Column="0"
                    Content="Hard"
                    x:Name="xŚredni"/>
                <RadioButton x:ConnectionId='22' 
                    GroupName="Dificulty"
                    Grid.Column="1"
                    Content="Very Hard"
                    x:Name="xBTrudny"/>
            </Grid>
        </Grid>




    </Grid>







</Page>

