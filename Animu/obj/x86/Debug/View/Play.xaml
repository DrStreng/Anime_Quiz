<Page
    x:Class="Animu.View.Play"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Animu.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid>
        <Grid.Background>
            <ImageBrush 
                AlignmentY="Center" 
                Stretch="None" 
                ImageSource="../../Assets/aaa.png"
                >
                <ImageBrush.Transform>
                    <CompositeTransform TranslateX="-150"/>
                </ImageBrush.Transform>

            </ImageBrush>
        </Grid.Background>
        <Grid VerticalAlignment="Top">
            <Image x:ConnectionId='34' x:Name="ImageContent"
                   Width="330"
                   Height="300"
                   Margin="10"/>
        </Grid>
        <Grid VerticalAlignment="Center"></Grid>
        <Grid VerticalAlignment="Bottom"
              Background="#faf4da"
              Padding="16 16"
              Margin=" 8 40 8 8"
              CornerRadius="10"
              >
            <StackPanel Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid BorderThickness="1"
                        BorderBrush="Beige">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:ConnectionId='33' x:Name="zdobytepkt"
                            Foreground="Black"
                            HorizontalAlignment="Center"
                            FontSize="30"
                            Grid.Column="1"
                            Text="0"
                        />
                        <Grid Grid.Row="1" Background="#0d1d36">
                            <TextBlock Text="Punkty"
                                       Foreground="White"
                                       HorizontalAlignment="Center" />
                        </Grid>
                    </Grid>
                    
                    <Grid BorderThickness="1"
                          Grid.Column="1"
                        BorderBrush="Beige">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:ConnectionId='32' x:Name="txtNum"
                            Foreground="Black"
                            HorizontalAlignment="Center"
                            FontSize="30"
                            Grid.Column="1"
                            Text="1/5"
                        />
                        <Grid Grid.Row="1" Background="#0d1d36">
                            <TextBlock Text="Pytanie"
                                       Foreground="White"
                                       HorizontalAlignment="Center" />
                        </Grid>
                    </Grid>
                    
                </Grid>
                
                <ProgressBar x:ConnectionId='27' x:Name="MyProgress"
                             Margin="10"
                             Background="#0d1d36"
                             Foreground="#a9e6f8"
                             VerticalAlignment="Top"
                             HorizontalAlignment="Stretch"/>
                
                <Button x:ConnectionId='28' x:Name="ButtonOdpA"
                        Content="OdpA"
                        Margin="5"
                        Background="#0d1d36"
                        Foreground="White"
                        HorizontalAlignment="Stretch"                         />
                <Button x:ConnectionId='29' x:Name="ButtonOdpB"
                        Content="OdpB"
                        Margin="5"
                        Background="#0d1d36"
                        Foreground="White"
                        HorizontalAlignment="Stretch"                         />
                <Button x:ConnectionId='30' x:Name="ButtonOdpC"
                        Content="OdpC"
                        Margin="5"
                        Background="#0d1d36"
                        Foreground="White"
                        HorizontalAlignment="Stretch"                         />
                <Button x:ConnectionId='31' x:Name="ButtonOdpD"
                        Content="OdpD"
                        Margin="5"
                        Background="#0d1d36"
                        Foreground="White"
                        HorizontalAlignment="Stretch"                         />

            </StackPanel>
            
        </Grid>
    </Grid>
</Page>

